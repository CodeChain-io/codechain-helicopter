{
    "compilerOptions": {
        "target": "es2015",
        "types": [
            "node"
        ],
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "**/*.ts"
    ]
}
